    <properties>
        <resource.openapi.payone.checkout.api>${project.build.directory}/resource_bundles/openapi.yaml
        </resource.openapi.payone.checkout.api>
        <checkout-api.version>1.5.0</checkout-api.version>
        <jackson-databind-nullable.version>0.2.6</jackson-databind-nullable.version>
        <jakarta.servlet-api.version>6.1.0-M2</jakarta.servlet-api.version>
        <swagger-annotations.version>2.2.21</swagger-annotations.version>
